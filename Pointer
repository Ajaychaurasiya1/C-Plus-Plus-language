int main() {
    int a, b;
    // int *pa = &a, *pb = &b;
    
    // scanf("%d %d", &a, &b);
    // update(pa, pb);
    // printf("%d\n%d", a, b);
    cin>>a>>b;
    int *x=&a, *y=&b;
    int sum;
    int diff;
    sum=*x+*y;
    diff=abs(*x-*y);
    cout<<sum<<endl;
    cout<<diff<<endl;

    return 0;
}
